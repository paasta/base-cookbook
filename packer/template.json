{
   "variables": {
     "name": "base",
     "aws_source_ami_instance": "ami-ad3660c4",
     "aws_source_ami_ebs": "ami-a73264ce",
     "aws_region": "us-east-1",
     "aws_instance_type": "m1.small",
     "aws_account_id": "",
     "aws_access_key": "",
     "aws_secret_key": "",
     "aws_cert_path": "",
     "aws_key_path": "",
     "aws_s3_bucket": ""
   },
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/virtualbox.sh",
        "scripts/vagrant.sh",
        "scripts/amazon.sh",
        "scripts/chef-prepare.sh"
      ],
      "execute_command": "echo $USER | {{ .Vars }} sudo -S -E sh '{{.Path}}'"
    },
    {
      "type": "chef-solo",
      "install_command": "curl -L https://www.opscode.com/chef/install.sh | {{if .Sudo}}sudo {{end}}bash -s -- -v 11.6.0"
      "cookbook_paths": ["cookbooks"],
      "run_list": ["recipe[base]"]
    },
    {
      "type": "shell",
      "script": "scripts/cleanup.sh",
      "execute_command": "echo $USER | {{ .Vars }} sudo -S -E sh '{{.Path}}'"
    }
  ],
  "builders": [
    {
      "type": "amazon-instance",
      "ami_name": "{{user `name`}}-instance-{{timestamp}}",
      "account_id": "{{user `aws_account_id`}}",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami": "{{user `aws_source_ami_instance`}}",
      "instance_type": "{{user `aws_instance_type`}}",
      "s3_bucket": "{{user `aws_s3_bucket`}}",
      "x509_cert_path": "{{user `aws_cert_path`}}",
      "x509_key_path": "{{user `aws_key_path`}}",
      "ssh_username": "ubuntu",
      "bundle_destination": "/mnt"
    },
    {
      "type": "amazon-ebs",
      "ami_name": "{{user `name`}}-ebs-{{timestamp}}",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami": "{{user `aws_source_ami_ebs`}}",
      "instance_type": "{{user `aws_instance_type`}}",
      "ssh_username": "ubuntu"
    },
    {
      "type": "virtualbox",
      "vm_name": "{{user `name`}}",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed-precise64.cfg ",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
        "hostname={{ .Name }} ",
        "fb=false debconf/frontend=noninteractive ",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
        "initrd=/install/initrd.gz -- <enter>"
      ],
      "disk_size": 10000,
      "guest_os_type": "Ubuntu_64",
      "http_directory": "http",
      "iso_url": "http://releases.ubuntu.com/12.04/ubuntu-12.04.3-server-amd64.iso",
      "iso_checksum": "2cbe868812a871242cdcdd8f2fd6feb9",
      "iso_checksum_type": "md5",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "shutdown_command": "echo $USER | sudo -S shutdown -P now"
    },
    {
      "type": "vmware",
      "vm_name": "{{user `name`}}",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed-precise64.cfg ",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
        "hostname={{ .Name }} ",
        "fb=false debconf/frontend=noninteractive ",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
        "initrd=/install/initrd.gz -- <enter>"
      ],
      "disk_size": 10000,
      "guest_os_type": "ubuntu-64",
      "http_directory": "http",
      "iso_url": "http://releases.ubuntu.com/12.04/ubuntu-12.04.3-server-amd64.iso",
      "iso_checksum": "2cbe868812a871242cdcdd8f2fd6feb9",
      "iso_checksum_type": "md5",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "shutdown_command": "echo $USER | sudo -S shutdown -P now"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{user `name`}}-{{.BuildName}}.box"
    }
  ]
}
